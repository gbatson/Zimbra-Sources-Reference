# IMAP proxy default configuration
# 
server
{
    listen                  ${mail.imap.port};
    protocol                imap;
    proxy                   on;
    sasl_service_name       "imap";
    starttls                ${mail.imap.tls};
    ssl_certificate         ${ssl.crt.default};
    ssl_certificate_key     ${ssl.key.default};
}
