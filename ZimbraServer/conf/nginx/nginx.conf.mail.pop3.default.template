# POP3 proxy default configuration
# 
server
{
    listen                  ${mail.pop3.port};
    protocol                pop3;
    proxy                   on;
    sasl_service_name       "pop";
    starttls                ${mail.pop3.tls};
    ssl_certificate         ${ssl.crt.default};
    ssl_certificate_key     ${ssl.key.default};
}


