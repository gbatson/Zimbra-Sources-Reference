<zimlet name="com_zimbra_apptsummary" version="0.6" label="Appointments Summary" description="Sends a daily email with a summary of appointments for that day.">
	<include>apptsummary.js</include>
	<handlerObject>com_zimbra_apptsummary_HandlerObject</handlerObject>
	<zimletPanelItem label="${msg.ApptSummary_panel_label}" icon="CalendarApp">
	</zimletPanelItem>
	<userProperties>
		<property type="string" name="apptSummary_onlySendSummaryWhenThereAreAppts" value="true"/>	
		<property type="string" name="apptSummary_emailLastUpdateDate" />	
	</userProperties>
</zimlet>

