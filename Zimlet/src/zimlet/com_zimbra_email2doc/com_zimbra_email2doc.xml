<zimlet name="com_zimbra_email2doc" version="1.5" label="Email2Doc" description="Drag-and-drop an email message to save as a Document page.">
	<include>email2doc.js</include>
	<includeCSS>email2doc.css</includeCSS>
	<resource>email2doc-icon.gif</resource>
	<handlerObject>com_zimbra_email2doc_HandlerObject</handlerObject>

	<zimletPanelItem label="${msg.Email2DocZimlet_panel_label}" icon="email2doc-panelIcon">
		<toolTipText>${msg.Email2DocZimlet_panel_tooltip}</toolTipText>
		<dragSource type="ZmConv" />
		<dragSource type="ZmMailMsg" />
	</zimletPanelItem>

</zimlet>
