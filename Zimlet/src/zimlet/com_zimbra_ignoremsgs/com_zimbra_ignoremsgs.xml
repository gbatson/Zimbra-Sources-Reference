<zimlet name="com_zimbra_ignoremsgs" version="0.2" label="Ignore Messages" description="Allows you to ignore message threads.">
  <include>ignoremsgs.js</include>
  <includeCSS>ignoremsgs.css</includeCSS>
  <handlerObject>com_zimbra_ignoremsgs</handlerObject>

  <zimletPanelItem label="Ignore Messages" icon="ignoremsgs-panelIcon">
    <toolTipText>Select a message thread to ignore.</toolTipText>
  </zimletPanelItem>
  <userProperties>
     <property type="string" name="turnOnIgnoreMsgsZimlet" value="false"/>
     <property type="string" name="ignoreMsgs_storeSubjectWithDate" value=""/>
	 <property type="string" name="ignoremsgs_ignoreForDays" value="10"/>
  </userProperties>
</zimlet>
