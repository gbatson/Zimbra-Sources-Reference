<zimlet name="com_zimbra_stickynotes" version="1.3" description="Add a sticky note to email messages.">
	<include>stickynotes.js</include>
	<includeCSS>stickynotes.css</includeCSS>
	<resource>stickynotes-icon.gif</resource>
	<handlerObject>com_zimbra_stickynotes</handlerObject>

	<zimletPanelItem label="Sticky Notes" icon="stickynotes-panelIcon">
		<toolTipText>Add a sticky note to email messages.</toolTipText>
		<dragSource type="ZmConv" />
	    <dragSource type="ZmMailMsg"/>
	</zimletPanelItem>
	<userProperties>
		<property type="string" name="turnONstickynotesZimlet" value="false"/>
		<property type="string" name="stickyNotes_ToolbarBtn" value="true"/>		
		<property type="string" name="stickyNotes_data" value=""/>
	</userProperties>	
</zimlet>


