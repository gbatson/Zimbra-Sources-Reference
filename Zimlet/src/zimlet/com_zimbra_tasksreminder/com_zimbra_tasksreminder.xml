<zimlet name="com_zimbra_tasksreminder" version="2.3" label="Task Reminder" description="Once a day reminds users about up-coming and overdue tasks." >
	<include>tasksreminder.js</include>
	<includeCSS>tasksreminder.css</includeCSS>
	<handlerObject>com_zimbra_tasksreminder</handlerObject>

  <zimletPanelItem label="Tasks Reminder" icon="tasksreminder-panelIcon">
    <toolTipText>Once a day will remind you about up-coming and overdue tasks.</toolTipText>

  </zimletPanelItem>

	<userProperties>
		<property type="string" name="taskreminder_beforedays" value="14"/>
		<property type="string" name="taskreminder_afterdays" value="14"/>
		<property type="string" name="taskreminder_lastShownDate" value=""/>
	</userProperties>
</zimlet>